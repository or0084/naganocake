<div class="container mx-auto text-aligin-center">
  <div class="row mt-5 mb-5">
    <div class="col-3"></div>
    <div class="col-3"><%= image_tag @item.get_image %></div>
    <div class="col-6">
      <div class="item">
       <h3 class="item-name"><%= @item.name %></h3>
       <p class="item-body"><%= @item.introduction %></p>
       <h4 class="item-price">¥<%= @item.with_tax_price.to_s(:delimited) %>(税込)</h4>
      </div>
    </div>
<div class="col-7"></div>
    <div class="row">

      <%= form_with model: @cart_item, url: public_cart_items_path  do |f| %>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.select :amount, *[1..10], include_blank: "個数選択" %>
      <%= f.submit "カートに入れる", :class => "btn btn-success ml-5" %>
    </div>
      <% end %>
  </div>
</div>
