<div class="container">
  <h3 class="row mt-5 mb-4">商品一覧（全<%= Item.count %>件）</h3>
  <div class="row">
    <% @items.each do |item| %>
     <div class="col-md-3">
       <div class="image">
        <%= link_to public_item_path(item.id) do %><%= image_tag item.get_image(200,200) %><% end %>
        <div class="item-list">
          <h4 class="item-name"><%= item.name %></h4>
          <p class="item-price">¥<%= item.price.to_s(:delimited) %></p>
        </div>
       </div>
     </div>
    <% end %>
  </div>
</div>

<ul class="pagination">
<%= paginate @items %>
</ul>