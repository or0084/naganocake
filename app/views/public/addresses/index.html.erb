<div class="container">
  <div class="row">
    <div class="bg-light col-3　text-align-center">配送先登録/一覧</div>
  </div>
  <%= form_with model: @address, url: public_addresses_path do |f| %>
  <div class="row">
    <div class="col-3">郵便番号（ハイフンなし）</div>
    <div class="col-3">
      <%= f.text_field :postal_code, :placeholder => "0000000" %>
    </div>
  </div>
  <div class="row">
    <div class="col-3">住所</div>
    <div class="col-7">
      <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町０−０" %>
    </div>
  </div>
  <div class="row">
    <div class="col-3">宛名</div>
    <div class="col-7">
      <%= f.text_field :name, :placeholder => "令和道子" %>
      <%= f.submit "新規登録", :class => "btn btn-succes" %>
    </div>
  </div>
  <% end %>
</div>

<table class="table-bordered">
  <thead>
      <tr class="table-secondary text-algin-left">
        <th>郵便番号</th>
        <th style="width: 30%">住所</th>
        <th>宛名</th>
        <th style="width: 30%"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_public_address_path(address.id), :class => "btn btn-succes" %>
      <%= link_to "削除する", public_cart_item_path(address.id), method: :delete, :class => "btn btn-sm btn-danger" %></td>
    </tbody>
      <% end %>
</table>

