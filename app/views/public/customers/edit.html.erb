<div class="container">
  <div class="row">

 <div class="col-9">
   <br>
  <div class="row text-center">
    <h3 class="bg-light col-lg-4 mb-5  mt-4">会員情報編集</h3>
  </div>

  <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>

  <div class="form-group row">
    <label for="text" class="col-lg-3">氏名</label>
    <%= f.text_field :last_name, :class => "col-lg-3 mr-5" %>
    <%= f.text_field :first_name, :class => "col-lg-3" %>
  </div>
  <div class="form-group row">
    <label for="text" class="col-lg-3">フリガナ</label>
    <%= f.text_field :last_name_kana, :class => "col-lg-3 mr-5" %>
    <%= f.text_field :first_name_kana, :class => "col-lg-3" %>
  </div>
  <div class="form-group row">
    <label for="text" class="col-lg-3">郵便番号</label>
    <%= f.text_field :postal_code, :class => "col-lg-3" %>
  </div>
  <div class="form-group row">
    <label for="text" class="col-lg-3">住所</label>
    <%= f.text_field :address, :class => "col-lg-8" %>
  </div>
  <div class="form-group row">
    <label for="text" class="col-lg-3">電話番号</label>
    <%= f.text_field :telephone_number, :class => "col-lg-3" %>
  </div>
  <div class="form-group row">
    <label for="text" class="col-lg-3">メールアドレス</label>
    <%= f.text_field :email, :class => "col-lg-3" %>
  </div>
  <div class="form-group row">
    <div class="col-lg-3"></div>
    <%= f.submit "編集内容を保存", :class => "btn btn-success col-lg-2 mb-5 mt-3 mr-5" %>
    <%= link_to "退会する", unsubscribe_path, :class => "btn btn-danger col-lg-2 mb-5 mt-3" %>
  </div>
  <% end %>
  </div>
</div>
</div>