<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <h3 class="col-2 bg-light text-center ml-3 mt-5 mb-5">マイページ</h3>
    </div>
    <div class="row text-algin-left">
      <h3 class="col-2">登録情報</h3>
      <div class="col-2"><%= link_to "編集する", edit_public_customer_path(@customer.id), :class => "btn btn-success" %></div>
    </div>


</div>
      <table class="table-bordered text-algin-left col-6 ml-5 mt-4 mb-5">
        <thead>
          <tr>
            <th style="width: 20%" class="bg-light">氏名</th>
            <td style="width: 50%"><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <th class="bg-light">カナ</th>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th class="bg-light">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="bg-light">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="bg-light">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th class="bg-light">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </thead>
      </table>


  <div class="row">
    <h3 class="col-2 mt-4 ml-5 mb-3">配送先</h3>
    <div class="col-2  mt-4 mb-3">
      <%= link_to "一覧を見る", public_addresses_path, :class => "btn btn-primary" %></div>
  </div>
  <div class="row">
    <h3 class="col-2 ml-5 mb-5">注文履歴</h3>
    <div class="col-2  mb-5">一覧を見る</div>
  </div>
