<div class="container mx-auto">
  <div class="row">
    <h3 class="bg-light col-3 text-center mt-4 mb-3">注文履歴一覧</h3>
    </div>
  <div class="row">
    <table class="table-bordered col-8 mb-5">
  <thead>
      <tr class="table-secondary text-algin-left">
        <th style="width: 15%">注文日</th>
        <th style="width: 40%">配送先</th>
        <th style="width: 15%">注文商品</th>
        <th style="width: 10%">支払い金額</th>
        <th style="width: 15%">ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <td><%= order.created_at %></td>
      <td><%= order.postal_code %><%= order.address %><%= order.name %></td>
      <td><% order.order_details.each do  |order_item| %>
      <%= order_item.item.name %><% end %></td>
      <td><%= order.total_payment.to_s(:delimited) %></td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", public_order_path(order.id), :class => "btn btn-primary" %></td>
    </tbody>
      <% end %>
</table>
  </div>
</div>

<ul class="pagination">
<%= paginate @orders %>
</ul>

