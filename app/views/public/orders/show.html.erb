<div class="container">
  <div class="row">
    <div class="col-3">
      <h3 class="bg-light text-center mt-4 mb-2">注文履歴詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <table class="table table-bordered w-100">
        <tr class="table-secondary">
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr class="table-secondary">
          <th>配送先</th>
          <td><%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
        </tr>
        <tr class="table-secondary">
          <th>支払い方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr class="table-secondary">
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>
    <div class="col-5">
      <table class="table table-bordered w-70">
        <tr><th class="table-secondary">商品合計</th><td><%=( @order.total_payment - @order.shipping_cost ).to_s(:delimited)%></td></tr>
        <tr><th class="table-secondary">配送料</th><td><%= @order.shipping_cost %></td></tr>
        <tr><th class="table-secondary">請求金額</th><td><%= @order.total_payment.to_s(:delimited) %></td></tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-11">
      <table class="table table-bordered">
        <tr>
          <th class="col-3">商品</th>
          <th class="col-3">単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <% @order_items.each do |order_item| %>
        <tr>
          <td class="col-7"><%= order_item.item.name %></td>
          <td><%= order_item.item.with_tax_price %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.subtotal %></td>
        </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>
