<div class="container mx-auto block-center">
  <div class="col-3">
      <h3 class="bg-light mt-4 ml-5 mb-5 text-center">商品詳細</h3>
    </div>
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-3"><%= image_tag @item.get_image(200,200) %></div>
    </div>
      <div class="row mt-4 mb-4">
        <div class="col-lg-3">商品名</div>
        <div class="col-lg-4"><%= @item.name %></div>
      </div>
      <div class="row mt-4 mb-4">
        <div class="col-lg-3">商品説明</div>
        <div class="col-lg-4"><%= @item.introduction %></div>
      </div>
      <div class="row mt-4 mb-4">
        <div class="col-lg-3">ジャンル</div>
        <div class="col-lg-4"><%= @item.genre.name %></div>
      </div>
      <div class="row mt-4 mb-4">
        <div class="col-lg-3">税込価格（税抜価格）</div>
        <div class="col-lg-4"><%= @item.price.to_s(:delimited) %>(<%= @item.with_tax_price.to_s(:delimited) %>)円</div>
      </div>
      <div class="row mt-4 mb-4">
        <div class="col-lg-3">販売ステータス</div>
        <div class="col-lg-4"><%= @item.is_active %></div>
      </div>

    <div class="row">
      <div class="col-lg-9 mx-auto">

        <%= link_to "編集する", edit_admin_item_path(@item.id), :class => "btn btn-success" %>

      </div>
    </div>
<br>

</div>
