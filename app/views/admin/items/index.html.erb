<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <h3 class="bg-light">商品一覧</h3>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr class="table-secondary text-center">
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td><%= item.is_active %></td>
    </tbody>
      <% end %>
  </tabel>
</div>

<%= paginate @items %>