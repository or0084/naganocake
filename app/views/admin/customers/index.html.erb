<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <h3 class="bg-light mt-4 ml-5 mb-4">会員一覧</h3>
    </div>
  </div>
  <div class="container">
    <div class="row">
  <table class="table col-lg-10 ">
    <thead>
      <tr class="table-secondary text-algin-left">
        <th>会員ID</th>
        <th style="width: 30%">氏名</th>
        <th style="width: 30%">メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
      <td><%= customer.email %></td>

      <td><%= customer.is_deleted ? '退会' : '有効' %></td>
    </tbody>
      <% end %>
  </table>
  </div>
  </div>
</div>

<ul class="pagination">
<%= paginate @customers %>
</ul>
