<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h3 class="bg-light mt-5 ml-5 mb-4">注文履歴一覧</h3>
    </div>
  </div>
  <div class="container">
    <div class="row">
  <table class="table col-lg-10 mb-5">
    <thead>
      <tr class="table-secondary text-algin-left">
        <th style="width: 25%">購入日時</th>
        <th style="width: 25%">購入者</th>
        <th style="width: 25%">注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <td><%= link_to admin_order_path(order.id) do %><%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %><% end %></td>
      <td><%= order.name %></td>
      <td><%= order.order_details.all.sum(:amount) %></td>
      <td><%= order.status_i18n %></td>
    </tbody>
      <% end %>
  </table>
  </div>
  </div>
</div>

<ul class="pagination">
<%= paginate @orders %>
</ul>

