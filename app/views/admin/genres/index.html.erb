<div class="container">
  <div class="row">
    <h3 class="bg-light">ジャンル一覧・追加</h3>
  </div>
  <%= form_with model: @genre do |f| %>
  <div class="row">
    <label for="col-lg-1">ジャンル名</label>
    <%= f.text_field :name, :class => "col-lg-2", :placeholder => "ジャンル名" %>
    <%= f.submit "新規登録", :class => "btn btn-success col-lg-1" %>
  </div>
  <% end %>

  <%= @genres.each do |genre| %>
  <div class="row-lg-4 bg-ligth">ジャンル
  <div class="col-lg-2"><%= genre.name %><%= link_to "編集する", admin_genres_path, :class => "btn btn-sm btn-success col-lg-1" %></div>
  </div>
  <% end %>

</div>