<div class="container m-4">
  <div class="row">
    <div class="col-lg-1"></div>
    <h3 class="bg-light">ジャンル一覧・追加</h3>
  </div>
  <br>
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <div class="form-group row-lg-10">
    <label for="col-lg-2">ジャンル名</label>


    <%= f.text_field :name, :class => "col-lg-2 col-form-label", :placeholder => "ジャンル名" %>

    <%= f.submit "新規登録", :class => "btn btn-success col-lg-1" %>
  </div>
  <% end %>

  <% @genres.each do |genre| %>
  <div class="row bg-ligth">
  <div class="">ジャンル</div>
  <div class=""><%= genre.name %><%= link_to "編集する", admin_genres_path, :class => "btn btn-sm btn-success" %></div>
  </div>
　<% end %>

</div>