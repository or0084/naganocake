<div class="container mx-auto block-center">
  <div class="col-5">
   <h3 class="bg-light mt-4 mb-5 text-center">注文履歴詳細</h3>
  </div>
　<%= form_with model: @orders, url: admin_order_detail_path(@orders.id), method: :patch do |f| %>
      <div class="row mt-4 mb-4">
        <div class="col-lg-2">購入者</div>
        <div class="col-lg-4"><%= @order.order.name %></div>
      </div>
      <div class="row mt-4 mb-4">
        <div class="col-lg-2">注文日</div>
        <div class="col-lg-4"><%= @order.created_at %></div>
      </div>
      <div class="row mt-4 mb-4">
        <div class="col-lg-2">配送先</div>
        <div class="col-lg-8">〒<%= @order.order.postal_code %><%= @order.order.address %><%= @order.order.name %></div>
      </div>
      <div class="row mt-4 mb-4">
        <div class="col-lg-2">支払い方法</div>
        <div class="col-lg-4">
          <%= f.select :order_id, options_from_collection_for_select(Order.all, :id, :status) %>
          <%= f.submit "更新", :class => "btn btn-sm btn-success" %>
        </div>
      </div>

      </div>

    <div class="row">
      <div class="col-6">
        <table class="table">
    <thead>
      <tr class="table-secondary text-algin-left">
        <th style="width: 20%">商品名</th>
        <th style="width: 15%">単価（税込）</th>
        <th style="width: 10%">数量</th>
        <th style="width: 15%">小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <td><%= order.item.name %></td>
      <td><%= order.item.with_tax_price %></td>
      <td><%= order.amount %></td>
      <td><%= f.select :making_status, options_from_collection_for_select(OrderDetail.all, :id, :making_status) %>
      <%= f.submit "更新", :class => "btn btn-sm btn-success" %></td>
    </tbody>
      <% end %>
  </table>
      </div>
      <div class="col-4">
      <table class="table-borderless text-algin-left">
        <thead>
          <tr>
            <th style="width: 50%">商品合計</th>
            <td><%= @order.subtotal %>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.order.shipping_cost %>円</td>
          </tr>
          <tr>
            <th>請求合計金額</th>
            <td><%= @order.total %>円</td>
          </tr>
        </thead>

      </table>
      </div>
      </div>

<br>

</div>
